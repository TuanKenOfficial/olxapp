<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/toolbarRl">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorblack"
            android:text="Đặt hàng"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <!--shop name-->
        <TextView
            android:id="@+id/shopNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblack"
            android:text="Người bán"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sdtTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblack"
            android:text="SĐT"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorgray"/>

        <!--show cart items-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartItemsRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_cart" />

        <RelativeLayout
            android:id="@+id/pricesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartItemsRv"
            android:padding="10dp">
            <!--Promo input layout-->
            <RelativeLayout
                android:id="@+id/promoRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rec02"
                android:padding="5dp">

                <TextView
                    android:id="@+id/promoLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:text="Mã khuyến mãi"
                    android:textColor="@color/colorblack"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/promoCodeEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/promoLabelTv"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/validateBtn"
                    android:hint="Mã khuyến mãi"
                    android:padding="10dp"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorgray"
                    android:textSize="14sp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/validateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promoLabelTv"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/sendmessage"
                    android:tint="@color/colorwhite"
                    app:fabSize="mini"/>

                <TextView
                    android:id="@+id/promoDescriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/promoCodeEt"
                    android:hint="Mô tả mã khuyến mãi"
                    android:padding="10dp"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorgray"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/applyBtn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/promoDescriptionTv"
                    android:text="Apply"
                    android:textColor="@color/colorwhite"/>


            </RelativeLayout>
            <TextView
                android:id="@+id/priceLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/promoRl"
                android:padding="5dp"
                android:text="Tổng giá:"
                android:textStyle="bold"
                android:textColor="@color/colorblack"/>

            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/promoRl"
                android:text="20đ"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorblack"/>
            <TextView
                android:id="@+id/promotionLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/priceLabelTv"
                android:text="Giá khuyến mãi:"
                android:textStyle="bold"
                android:textColor="@color/colorblack"/>

            <TextView
                android:id="@+id/promotionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/priceTv"
                android:text="20đ"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorblack"/>
            <TextView
                android:id="@+id/finalPriceLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/promotionLabelTv"
                android:text="Tổng cộng:"
                android:textStyle="bold"
                android:textColor="@color/colorblack"/>

            <TextView
                android:id="@+id/finalPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/promotionTv"
                android:text="20đ"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorblack"/>
        </RelativeLayout>

        <Button
            android:id="@+id/checkoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:layout_below="@id/pricesLayout"
            android:padding="15dp"
            android:text="Xác nhận đơn hàng"
            android:textColor="@color/colorgold"/>
    </LinearLayout>
</ScrollView>