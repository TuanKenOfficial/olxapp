        android:label="@string/app_name"
        android:roundIcon="@drawable/olx_trangbia"
        android:supportsRtl="true"
        android:theme="@style/Theme.Olx"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.DeleteAccountActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProfileEditSellerActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LocationPickerActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AdCreateActivity"
            android:exported="false" />
        <activity
